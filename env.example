# Astro-Insight 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 环境配置
ENVIRONMENT=development
DEBUG=false

# 数据库配置
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=astro_insight.db
DB_USER=
DB_PASSWORD=

# LLM配置
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://api.openai.com/v1

# 安全配置
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# 服务器配置
SERVER_HOST=localhost
SERVER_PORT=8000

# 缓存配置
CACHE_TYPE=memory
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/astro_insight.log
LOG_CONSOLE_OUTPUT=true
